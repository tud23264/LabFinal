<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.colin.labfinal.Portfolio">

    <AutoCompleteTextView
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtSymbol"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnAdd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view"
        android:id="@+id/btnAdd"
        android:layout_alignBottom="@+id/txtSymbol"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right|top" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="408dp"
        android:id="@+id/lstStocks"
        android:layout_below="@+id/txtSymbol"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="-30dp" />
</FrameLayout>
